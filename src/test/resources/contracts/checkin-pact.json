{
  "provider": {
    "name": "ParkingService"
  },
  "consumer": {
    "name": "ParkingApp"
  },
  "interactions": [
    {
      "description": "Realiza check-in de um carro",
      "providerState": "Existe uma vaga disponível",
      "request": {
        "method": "POST",
        "path": "/api/v1/checkins",
        "body": {
          "brand": "Toyota",
          "color": "Red",
          "model": "Sedan",
          "plate": "ABC1234"
        },
        "headers": {
          "Content-Type": "application/json"
        }
      },
      "response": {
        "status": 201,
        "body": {
          "checkInTime": "2025-03-13T13:00:00",
          "id": "f5d4b3b4-1b4b-4b4b-8b4b-4b4b4b4b4b4b",
          "slot": {
            "id": 1,
            "occupied": true
          }
        },
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
      "description": "Retorna erro ao tentar realizar check-in de um carro com placa vazia",
      "providerState": "Tentativa de check-in com placa vazia",
      "request": {
        "method": "POST",
        "path": "/api/v1/checkins",
        "body": {
          "brand": "Toyota",
          "color": "Red",
          "model": "Sedan",
          "plate": ""
        },
        "headers": {
          "Content-Type": "application/json"
        }
      },
      "response": {
        "status": 422,
        "body": {
          "error": "Unprocessable Entity",
          "errors": {
            "plate": "Plate cannot be empty"
          },
          "message": "Validation error",
          "path": "/api/v1/checkins",
          "timestamp": "2025-03-13T14:00:00"
        },
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
      "description": "Retorna erro ao tentar realizar check-in de um carro com placa inválida",
      "providerState": "Tentativa de check-in com placa inválida",
      "request": {
        "method": "POST",
        "path": "/api/v1/checkins",
        "body": {
          "brand": "Toyota",
          "color": "Red",
          "model": "Sedan",
          "plate": "1234567890"
        },
        "headers": {
          "Content-Type": "application/json"
        }
      },
      "response": {
        "status": 400,
        "body": {
          "error": "Bad Request",
          "message": "Invalid plate",
          "path": "/api/v1/checkins",
          "timestamp": "2025-03-13T14:00:00"
        },
        "headers": {
          "Content-Type": "application/json"
        }
      }
    }
  ]
}